#include <stdio.h>
#pragma warning(disable:4996)


void printfunc(int num);
void print_reverse(int num);

int main(void) {
	
	int num1 = 0;
	(void)scanf("%d", &num1);
	printfunc(num1);
	print_reverse(num1);

	return 0;
}

void printfunc(int num)
{
for (int i = 0; i < num; i++)
{
	for (int j = 0; j < (num - i-1); j++) {

		printf(" ");

 }
	for (int k = 0; k < (2*i+1); k++) {
		printf("*");
	}

	puts("");
 }

}

void print_reverse(int num)
{
	for (int i = 0; i < num - 1; i++) {
		// i: 0,1,2,3

		for (int j = 0; j < i+1; j++) {
			// j:1개~4개
			printf(" ");

		}
		for (int k = 0; k < 2 * (num - 1) - (2 * i) - 1; k++)

		{

			printf("*");

		}
		puts("");
}

}
