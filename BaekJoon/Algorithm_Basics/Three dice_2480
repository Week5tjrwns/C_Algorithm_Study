#include<stdio.h>
#include<stdlib.h>
#pragma warning(disable:4996)

int main(void) {
	int a = 0,b = 0,c = 0;
	scanf("%d%d%d", &a, &b, &c);
	if (a == b && a == c)printf("%d", 10000 + a * 1000);
	else if(a == b && b != c )printf("%d", 1000 + a * 100);
	else if(b == c && a != c)printf("%d", 1000 + b * 100);
	else if(a == c && b != c)printf("%d", 1000 + c * 100);
	else if (a != b && a != c) {
		int compare = 0;
		if (a > b && a > c)compare = a;
		else if (b > a && b > c)compare = b;
		else if (c > a && c > b)compare = c;
		printf("%d", 100*compare);
	}


	
	return 0;
}
