#include<stdio.h>
#include<stdlib.h>
#pragma warning(disable:4996)

int main(void) {
	
	int arr[9];
	for (int i = 0; i < 9; i++)scanf("%d",arr+i);
	int Max = arr[0];
	int num = 0;
	for (int i = 0; i < 9; i++) {
		
		if (Max < arr[i]) {
			Max = arr[i];
			num = i;
		}
	}
	printf("%d\n%d", Max,num+1);

	return 0;
}
