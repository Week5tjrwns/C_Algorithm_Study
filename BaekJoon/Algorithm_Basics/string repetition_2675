#include<stdio.h>
#include<string.h>
#include<stdlib.h>
#pragma warning(disable:4996)




int main(void) {
	int N = 0;
	scanf("%d", &N);
	int* ptr = (int*)malloc(N * sizeof(int));
	char** ptr2 = (char**)malloc(N * sizeof(char*));
	for (int i = 0; i < N; i++) {
		ptr2[i] = (char*)malloc(20 * sizeof(char));
	}
	for (int i = 0; i < N; i++) {
		scanf("%d%s", ptr + i,ptr2[i]);
	}

	for (int i = 0; i < N; i++) {
		
		for (int j = 0; j < strlen(ptr2[i]); j++) {
			
			for (int k = 0; k < ptr[i]; k++) {

				printf("%c", ptr2[i][j]);

			}
		}
		puts("");
	}


	return 0;
}


