#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <stdbool.h>
#pragma warning(disable:4996)



int main(void) {

	char name[51] = {'\0'};
	double score[21] = {0};
	char grade[4] = {'\0'};
	double grade_arr[21] = {0};
	for (int i = 0; i < 20; i++) {
		scanf("%50s %lf %3s", name, score + i, grade);
		if (grade[0] == 'A' && grade[1] == '+')grade_arr[i] = 4.5;
		else if (grade[0] == 'A' && grade[1] == '0')grade_arr[i] = 4.0;
		else if (grade[0] == 'B' && grade[1] == '+')grade_arr[i] = 3.5;
		else if (grade[0] == 'B' && grade[1] == '0')grade_arr[i] = 3.0;
		else if (grade[0] == 'C' && grade[1] == '+')grade_arr[i] = 2.5;
		else if (grade[0] == 'C' && grade[1] == '0')grade_arr[i] = 2.0;
		else if (grade[0] == 'D' && grade[1] == '+')grade_arr[i] = 1.5;
		else if (grade[0] == 'D' && grade[1] == '0')grade_arr[i] = 1.0;
		else if (grade[0] == 'F')grade_arr[i] = 0.0;
		else if (grade[0] == 'P') {
			score[i] = 0.0;
			grade_arr[i] = 0.0;
		}
	}
	double sum1 = 0.0;
	double sum2 = 0.0;
	for (int i = 0; i < 20; i++) {

		sum1 += score[i]*grade_arr[i];
		sum2 += score[i];
	}
	if (sum2 == 0.0)printf("0.000000");
	else printf("%.6f", sum1 / sum2);
	
	return 0;
}
